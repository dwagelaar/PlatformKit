<?xml version="1.0" encoding="UTF-8"?>
<project default="zip">

	<target name="clean">
		<delete dir="doc/javadoc"/>
		<delete file="../doc.zip"/>
	</target>
	
	<target name="javadoc" depends="clean">
		<javadoc 
			access="protected" 
			author="true"
			destdir="doc/javadoc" 
			nodeprecated="false" 
			nodeprecatedlist="false" 
			noindex="false" 
			nonavbar="false" 
			notree="false" 
			packagenames="
				be.ac.vub.platformkit,
				be.ac.vub.platformkit.impl,
				be.ac.vub.platformkit.kb,
				be.ac.vub.platformkit.kb.jena,
				be.ac.vub.platformkit.kb.jena.eclipse,
				be.ac.vub.platformkit.kb.owlapi,
				be.ac.vub.platformkit.kb.owlapi.eclipse,
				be.ac.vub.platformkit.kb.util,
				be.ac.vub.platformkit.logging,
				be.ac.vub.platformkit.util,
				be.ac.vub.platformkit.provider,
				be.ac.vub.platformkit.editor.preferences,
				be.ac.vub.platformkit.presentation,
				be.ac.vub.platformkit.presentation.logging,
				be.ac.vub.platformkit.presentation.popup.action,
				be.ac.vub.platformkit.presentation.util,
				be.ac.vub.platformkit.presentation.util.provider,
				be.ac.vub.platformkit.java,
				org.mindswap.pellet.eclipse,
				com.hp.hpl.jena.eclipse,
				com.hp.hpl.jena.eclipse.logging" 
			source="1.5" 
			sourcepath="
				../../platformkit/src:
				../../platformkit-edit/src:
				../../platformkit-editor/src:
				../../platformkit-java/src:
				../../platformkit-jena/src:
				../../platformkit-kb-jena/src:
				../../platformkit-kb-owlapi/src:
				../../platformkit-owlapi/src:
				../../platformkit-pellet/src"
			splitindex="true" 
			use="true" 
			version="true">
			<link href="http://java.sun.com/j2se/1.5.0/docs/api/"/>
			<link href="../../../com.hp.hpl.jena.doc/doc/javadoc"/>
			<link href="../../../org.eclipse.emf.doc/references/javadoc"/>
			<link href="../../../org.eclipse.platform.doc.isv/reference/api"/>
			<link href="../../../org.semanticweb.owl.doc/html/javadoc"/>
			<link href="http://logging.apache.org/log4j/docs/api/"/>
			<classpath>
				<pathelement path="../../platformkit-owlapi/bin"/>
				<fileset dir="../../platformkit-jena/lib">
					<include name="**/*.jar"/>
				</fileset>
				<fileset dir="../../platformkit-pellet/lib">
					<include name="**/*.jar"/>
				</fileset>
				<fileset dir="${eclipse.home}/plugins">
					<include name="**/org.eclipse.*.jar"/>
					<include name="**/org.junit*/*.jar"/>
				</fileset>
			</classpath>
		</javadoc>
	</target>
	
	<target name="zip" depends="javadoc">
		<zip destfile="../doc.zip">
			<fileset dir=".">
				<include name="doc/**"/>
			</fileset>
		</zip>
	</target>
	
</project>
