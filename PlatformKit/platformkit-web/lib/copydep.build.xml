<?xml version="1.0" encoding="UTF-8"?>
<project name="atl-commandline/copydep" default="all">
	<target name="cleandep">
		<delete verbose="true">
			<fileset dir=".">
				<include name="common.jar"/>
				<include name="ecore*.jar"/>
				<include name="runtime.jar"/>
				<include name="equinox.registry.jar"/>
				<include name="equinox.common.jar"/>
				<include name="osgi.jar"/>
				<include name="resources.jar"/>
				<!--include name="platformkit.jar"/>
				<include name="platformkit-java.jar"/-->
			</fileset>
		</delete>
	</target>
	
	<target name="copydep" depends="cleandep">
		<copy tofile="common.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.emf.common_*.jar"/>
			</fileset>
		</copy>
		<copy tofile="ecore.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.emf.ecore_*.jar"/>
			</fileset>
		</copy>
		<copy tofile="ecore.xmi.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.emf.ecore.xmi_*.jar"/>
			</fileset>
		</copy>
		<copy tofile="runtime.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.core.runtime_*.jar"/>
			</fileset>
		</copy>
		<copy tofile="equinox.registry.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.equinox.registry_3.3.1*.jar"/>
			</fileset>
		</copy>
		<copy tofile="equinox.common.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.equinox.common_*.jar"/>
			</fileset>
		</copy>
		<copy tofile="resources.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.core.resources_3.3.1*.jar"/>
			</fileset>
		</copy>
		<copy tofile="osgi.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="org.eclipse.osgi_3.3.2*.jar"/>
			</fileset>
		</copy>
		<!--copy tofile="platformkit.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="be.ac.vub.platformkit_1.1.2*.jar"/>
			</fileset>
		</copy>
		<copy tofile="platformkit-java.jar" verbose="true">
			<fileset dir="${eclipse.home}/plugins">
				<include name="be.ac.vub.platformkit.java_1.1.0*.jar"/>
			</fileset>
		</copy-->
	</target>
	
	<target name="all" depends="copydep"/>
</project>